{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "stream",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "clean-out",
      "program": "${workspaceFolder}/ffmpeg_g",
      "args": [
        "-i",
        "http://demo.ssai.tv/stream/local/trku.m3u8",
        "-copyts",
        "-c",
        "copy",
        "-map",
        "0",
        // "0:0",
        // "-map",
        // "0:1",
        // "-map",
        // "0:2",
        // "-map",
        // "0:4",
        "-hls_time",
        "4",
        "-hls_list_size",
        "0",
        // "-hls_flags",
        // "delete_segments",
        "-f",
        "hls",
        "${workspaceFolder}/../out/stream.m3u8"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "file",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "clean-out",
      "program": "${workspaceFolder}/ffmpeg_g",
      "args": [
        "-y",
        "-i",
        "${workspaceFolder}/../videos/concatenated_trku3.ts",
        "-copyts",
        "-c",
        "copy",
        "-hls_list_size",
        "0",
        "-hls_time",
        "4",
        "${workspaceFolder}/../out/stream.m3u8"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
